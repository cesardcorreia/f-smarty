    <script type="text/javascript">
        {if $ordem_slug === 'mes'}
        function stats_chart_update(name, target, current) {
            $el_title = $('#stats_chart > #title');
            $el_target = $('#stats_chart > #target');
            $el_current = $('#stats_chart > #current');

            $el_title.html(name);
            $el_target.html(target);
            $el_current.html(current);
        }

        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                label: '# TESTS',
                labels: [{$custom_targets['names']}],
                datasets: [{
                    data: [{$custom_targets['slices']}],
                    dataDefault: [{$custom_targets['slices']}],
                    backgroundColor: [
                        {$custom_targets['customColors']}
                    ],
                    customData: [{$custom_targets['customDatas']}],
                    customValues: [{$custom_targets['customValues']}],
                    customValuesToDefault: [{$custom_targets['customValues']}],
                    customValuesObjects: [{$custom_targets_placing}],
                    borderWidth: 1
                }]
            },
            options: {
                legend: {
                    display: false
                },
                legendCallback: function (chart) {
                    var text = [];
                    text.push('<ul id="chart" class="' + chart.id + '-legend">');
                    for (var i = 0; i < chart.data.datasets[0].data.length; i++) {
                        text.push('<li><span id="" style="background-color:' + chart.data.datasets[0].backgroundColor[i] + '">');
                        if (chart.data.labels[i]) {
                            text.push(chart.data.labels[i]);
                        }
                        text.push('</span></li>');
                    }
                    text.push('</ul>');
                    return text.join("");
                },
                plugins: {
                    labels: [
                        {
                            render: function (args) {
                                return args.dataset.customValues[args.index];
                            },
                            fontColor: "white",
                            overlap: true,
                            fontSize: 16,
                        }
                    ]
                },
                tooltips: {
                    callbacks: {
                        title: function (tooltipTitle, a) {
                            return a.datasets[0].customData[tooltipTitle[0].index];
                        },
                        label: function (tooltipItem, a) {
                            return a.labels[tooltipItem.index];
                        }
                    }
                },
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            },
        });
        $("#chartjs-legend").html(myChart.generateLegend());
        $("#chartjs-legend").on('click', "li", function () {
            if (myChart.data.datasets[0].customValues[$(this).index()]) {
                delete myChart.data.datasets[0].customValues[$(this).index()];
                delete myChart.data.datasets[0].data[$(this).index()];

                myChart.data.datasets[0].customValuesObjects[$(this).index()].forEach(function (a, b) {
                    $('#' + a).fadeOut();
                });

                $(this).css('text-decoration', 'line-through')
                $(this).css('text-decoration-color', '#fff')
            } else {
                myChart.data.datasets[0].customValuesObjects[$(this).index()].forEach(function (a, b) {
                    $('#' + a).fadeIn();
                });
                myChart.data.datasets[0].customValues[$(this).index()] = myChart.data.datasets[0].customValuesToDefault[$(this).index()];
                myChart.data.datasets[0].data[$(this).index()] = myChart.data.datasets[0].dataDefault[$(this).index()];
                $(this).css('text-decoration', 'none')
            }
            myChart.update();
        });
        {/if}

